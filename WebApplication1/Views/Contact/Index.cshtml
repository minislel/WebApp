@model Dictionary<int, WebApplication1.Models.ContactModel>
@{
    ViewBag.Title = "Index";
  Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Add</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Imie
            </th>
            <th>
                Nazwisko
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody
        @foreach (var item in @Model)
        {
        <tr>
            <td>
                @item.Value.FirstName
            </td>
            <td>
                @item.Value.LastName
            </td>s

            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-controller="Contact" asp-route-id="@item.Key">Edit</a>
                <a class="btn btn-primary" asp-action="Details" asp-controller="Contact" asp-route-id="@item.Key">Details</a>
                <a class="btn btn-danger " asp-action="Delete" asp-controller="Contact" asp-route-id="@item.Key">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>